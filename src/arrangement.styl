@css {@import url(http://fonts.googleapis.com/css?family=Palanquin:500|Maven+Pro:700,400|Quattrocento+Sans);}
@import '../kouto-swiss'

meyer-reset()
box-sizing-reset()
normalize()
@import '../fluidity/lib/fluidity'

understroke(color)
    content ' '
    position absolute
    width 100%
    height 100%
    left 0
    bottom 0
    border-left solid color 1px
    border-bottom solid color stroke-boldness

html
    font-size 14px
    font-family 'Maven Pro'
    font-weight 400
    background-color color-background
    color color-foreground

html, body
    overflow-y scroll

dt, dd
    font-family 'Maven Pro'
    font-weight 400

ul.tilde
    list-style-type none
    li:before
        content '~'
        margin-right 0.5em
        font-size 1.25em
        line-height 0.8


ul.horizontal
    vertical-align middle
    list-style-type none
    li
        display inline-block
    li:not(.disc):not(:first-child):before
        content ' '
        height 0.5ex
        width 0.5ex
        border-radius 50%
        margin auto 1ex auto
        background-color: color-foreground
        display inline-block
        vertical-align middle
    li.disc:not(:first-child):before
        content '\25cf'
        margin auto 1ex




ol.horizontal
    li
        display inline-block
        margin-right 1em

.articles
    list-style-type none
.articles > li
    display inline-block

.connect
    list-style-type none
.connect > li
    display inline-block

.color
    list-style-type none
    float right

.clearfix
    clearfix()

.color > li:not(.active)
    display inline-block
.color > li.active
    display none

.blocklink
    position relative

.blocklink .filler
    position absolute
    width 100%
    height 100%
    top 0 
    left  0 
    z-index  1 

.blocklink.active .content:after
    understroke(color-foreground)

.blocklink:hover:not(.active) .content:after
    understroke(color-foreground)

header, footer
    text-align center

header hr, footer hr
    width 80%
    min-width 20rem
    border none
    position relative
    margin 0.5rem auto

hr:after
    understroke(color-foreground)

.brand
    font-size: 3rem

.brand-headline
    font-family: 'Palanquin'
    font-weight: 500
    margin-bottom: 0
    line-height: 0.9
    font-weight: normal
    font-size: 2.9em

.brand-subscript
    font-family 'Maven Pro'
    font-weight: 700
    font-size 0.7rem
    margin: 0 auto
    font-size: 1em
    line-height: 1

// .brand-subscript-underline
//     text-decoration: underline

.brand-underline
    width 20rem
    min-width 20rem
    border none
    position relative
    margin 0.08rem auto 1rem

.brand-underline:after
    border-bottom-width: 0.12rem

a, a:visited
    color color-active
    text-decoration none

main
    grid()
    font-family 'Quattrocento Sans'
