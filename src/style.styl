grid-width = 100%
grid-min-width = 320px
base-font-size = 1em
base-line-height = 1.25em
base-color = #111
stroke-boldness = 0.1rem


@import '../fluidity/lib/fluidity'
@import '../kouto-swiss'

understroke(color)
    content ' '
    position absolute
    width 100%
    height 0
    left 0
    bottom 0
    border-bottom solid color stroke-boldness

html
    font-size 14px

.articles
    list-style-type none
.articles > li
    display inline-block

.connect
    list-style-type none
.connect > li
    display inline-block

.color
    list-style-type none
    float right

.clearfix
    clearfix()

.color > li:not(.active)
    display inline-block
.color > li.active
    display none

.blocklink
    position relative

.blocklink .filler
    position absolute
    width 100%
    height 100%
    top 0 
    left  0 
    z-index  1 

.blocklink .content:after
    understroke(lightness(base-color, 100%))

.blocklink.active .content:after
    understroke(lightness(base-color, 10%))

.blocklink:hover:not(.active) .content:after
    understroke(lightness(base-color, 40%))

header, footer
    text-align center

hr
    width 20rem
    border none
    position relative

hr:after
    understroke(lightness(base-color, 10%))
