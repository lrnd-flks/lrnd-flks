grid-width = 100%
grid-min-width = 320px
base-font-size = 1em
base-line-height = 1.25em
base-color = #111

@import '../fluidity/lib/fluidity'

.articles
    list-style-type none
.articles > li
    display inline-block

.connect
    list-style-type none
.connect > li
    display inline-block

.color
    list-style-type none
    float right

.color > li:not(.active)
    display inline-block
.color > li.active
    display none

.blocklink
    position relative

.blocklink .filler
    position absolute
    width 100%
    height 100%
    top 0 
    left  0 
    z-index  1 

.blocklink .decoration
    position absolute
    width 100%
    height 0.1em
    left 0
    bottom 0

.blocklink.active .decoration
    background-color black

.blocklink:hover:not(.active) .decoration
    background-color grey

header
    text-align center

header h1
    clear both

header > hr
    width 20em
    border none
    border-bottom solid black 0.1em
